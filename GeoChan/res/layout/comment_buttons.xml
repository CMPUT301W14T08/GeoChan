<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/thread_view_comment_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/comment_reply_button"
        android:text="@string/placeholder_location"
        android:paddingLeft="5dp"
        android:textColor="#2E8B57" />

    <ImageButton
        android:id="@+id/comment_reply_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thread_view_comment_location"
        android:background="@null"
        android:contentDescription="@string/comment_reply_button"
        android:paddingRight="5dp"
        android:focusable="false"
        android:src="@drawable/ic_reply" />

    <ImageButton
        android:id="@+id/comment_star_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thread_view_comment_location"
        android:layout_toRightOf="@+id/comment_reply_button"
        android:background="@null"
        android:contentDescription="@string/comment_star_button"
        android:paddingRight="5dp"
        android:focusable="false"
        android:src="@drawable/ic_rating_important" />
    
    <ImageButton
        android:id="@+id/comment_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thread_view_comment_location"
        android:layout_toRightOf="@+id/comment_star_button"
        android:background="@null"
        android:visibility="gone"
        android:contentDescription="@string/comment_star_button"
        android:paddingRight="5dp"
        android:focusable="false"
        android:src="@drawable/ic_edit" />
    

</RelativeLayout>