<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/current_location_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/new_location_button"
        android:layout="@+id/new_location_button"
        android:text="@string/current_location_button_text" />

    <Button
        android:id="@+id/new_location_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/new_location_button_text" />

    <EditText
        android:id="@+id/longitude_edit_text"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="@string/placeholder_longitude" />

    <EditText
        android:id="@+id/latitude_edit_text"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="@string/placeholder_latitude" >

        <requestFocus />
    </EditText>

    <ListView
        android:id="@+id/custom_location_list_view"
        android:layout_width="match_parent"
        android:layout_height="312dp"
        android:layout_above="@+id/current_location_button"
        android:layout_alignParentLeft="true" >
    </ListView>

</RelativeLayout>