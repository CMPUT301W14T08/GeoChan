<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/thread_view_op_threadTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/hello_world"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/thread_view_op_commentBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/thread_view_op_threadTitle"
        android:text="@string/lorem_ipsum"
        android:paddingRight="5dp"
        android:paddingLeft="5dp" />

    <TextView
        android:id="@+id/thread_view_op_commentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/thread_view_op_commentBy"
        android:layout_alignBottom="@+id/thread_view_op_commentBy"
        android:layout_toRightOf="@+id/thread_view_op_commentBy"
        android:text="@string/placeholder_date"
        android:paddingRight="5dp"
        android:alpha="0.7"
        android:textColor="#f00" />

    <TextView
        android:id="@+id/thread_view_op_commentBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:alpha="0.7"
        android:paddingLeft="5dp"
        android:text="@string/placeholder_postby"
        android:textColor="#f00" />

    <ImageView
        android:id="@+id/thread_view_op_thumbnail"
        android:contentDescription="@+id/thread_view_op_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/thread_view_op_commentDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/thread_view_op_commentBody"
        android:src="@android:drawable/dark_header" />

</RelativeLayout>
